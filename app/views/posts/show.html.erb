<% if current_user %>
  <%= form_with model: [@post, @comment], remote: true do |f| %>
    <%= f.text_field :body %>
    <%= f.submit "Comment" %>
  <% end %>  
<% else %>
  
<% end %>

<div id="comments_pane">
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
</div>

<%= link_to 'All Posts', posts_path %><br>
<%= render 'posts/adminlinks', post: @post %>