<div class="avatar">
  <img class="avatar-img" src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png" alt="avatar">
</div>
<div class="post" id="post-<%= post.id %>">
  <div class="post-header">
    <div class="header-left">
      <h3><%= link_to "#{post.user.first_name} #{post.user.last_name}", "/users/#{post.user.id}" %></h3>
      <h5>@<%= post.user.username.downcase %> Â· <%= time_ago_in_words(post.created_at) %></h5>
    </div>
    <div class="header-right">
      <i class="fas fa-ellipsis-v"></i>
    </div>
  </div>
  <div class="post-body">
    <p><%= post.status %></p>
  </div>
  <div class="post-comments">

    <details>
      <summary><%= pluralize(post.comments.count, "Comment") %></summary>
      <div id="comments_pane">
        <% post.comments.each do |comment| %>
          <%= render 'pages/comment', comment: comment %>
        <% end %>
      </div> 
    </details>     
  </div>
</div>